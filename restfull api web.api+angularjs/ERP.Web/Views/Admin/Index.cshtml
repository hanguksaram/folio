<!DOCTYPE html>
<html ng-app="ERPAdminApp" ng-controller="AdminPageController">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{title}} – Velvetech ERP</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/datatables")
    @Scripts.Render("~/bundles/angular")
    <base href="/admin" />
</head>
<body class="skin-blue">
    <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation" style="padding: 0px; margin: 0px;">
            <div class="container-fluid">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
                        <span class="sr-only">Toggle navigation</span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                    <a class="navbar-brand" href="#">Velvetech ERP</a>
                </div>
                <div id="navbar" class="navbar-collapse collapse">
                    <ul class="nav navbar-nav">
                        
                        <li data-ng-repeat="nav in navBars" class="{{nav.active}}"><a href="{{nav.url}}"><i class="{{nav.icon}}"></i> {{nav.name}}</a></li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Welcome, SA <span class="caret"></span></a>
                            <ul class="dropdown-menu" role="menu">
                                <li><a href="/logout">Logout</a></li>
                            </ul>
                        </li>
                    </ul>
                </div><!--/.nav-collapse -->
            </div>
        </nav>
    <div ng-http-loader template="/Content/loader.tpl.html"></div>

    <div class="container-fluid" style="padding: 0px;margin-top: -10px;">
        <ol class="breadcrumb">
            <li><a href="/admin">ERP</a></li>
            <li><a href="/admin">Admin</a></li>
            <li class="active">{{title}}</li>
        </ol>
    </div>


    <div class="container-fluid">        
        <!-- Main component for a primary marketing message or call to action -->
        <div ng-view>

        </div>

    </div> <!-- /container -->





    <footer>
        <p>&copy; @DateTime.Now.Year – Velvetech ERP</p>
    </footer>
</body>
</html>
